{
    "app-id" : "org.gnome.Devhelp",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "devhelp",
    "rename-icon" : "devhelp",
    "tags" : [
        "nightly"
    ],
    "desktop-file-name-prefix" : "(Nightly) ",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri",
        "--filesystem=host:ro",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags" : "-g -O0",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "devhelp",
            "config-opts" : [
                "--enable-flatpak-build"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "git://git.gnome.org/devhelp",
                    "branch" : "master"
                }
            ]
        }
    ]
}
